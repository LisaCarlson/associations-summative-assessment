extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/galleries') Gallery
      ul.nav.navbar-nav.navbar-right
        li
          h4.navbar-text 
            i(class='glyphicon glyphicon-user')  
              span.user #{username}
        li
          a(href='/signout') Sign Out
  .container
    .page-header 
      h1 #{gallery.title}   
        small.text-warning photos in this gallery...
    .row
      for photo in photos
        .col-md-4
          .thumbnail
            img(src= photo.img, alt='pic1')
            .caption
              h3= photo.name
              p
                a(href="/"+photo._id class="btn btn-warning" role="button") Edit
  

